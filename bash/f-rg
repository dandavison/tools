#!/bin/bash

rg_args='-i --hidden -g "!.git/*"'
if [ "$1" = "--exclude-tests" ]; then
    rg_args+=' -g "!*test*" -g "!*mock*" -g "!openapiv*"'
    shift
fi

pattern="$1"
shift
paths=("$@")
if [[ ${#paths[@]} -eq 0 ]]; then
    paths=(".")
fi

RG="rg $rg_args --color=always"
if [ -f .rg-config ]; then
    RG="RIPGREP_CONFIG_PATH=.rg-config $RG"
fi

DELTA="delta --light --grep-output-type classic"

fzf() {
    command fzf \
        --layout reverse \
        --info hidden \
        --prompt ' ' \
        --color light \
        --ansi \
        --bind 'ctrl-k:kill-line' \
        --bind 'alt-right:forward-word' \
        --bind 'alt-left:backward-word' \
        --preview-window 'up,70%' \
        "$@"
}

{
    if [[ -n "$pattern" ]]; then
        $RG --json "$pattern" "${paths[@]}" 2>/dev/null
    fi
} |
    $DELTA |
    fzf -d: \
        --query="$pattern" \
        --bind="change:reload:$RG --json {q} '${paths[*]}' | $DELTA" \
        --bind='enter:execute:wormhole {1}:{2}' \
        --preview="[[ -n {1} ]] && f-rg-preview {1} {2}"
